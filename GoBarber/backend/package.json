{
    "name": "gobarber-backend",
    "version": "1.0.0",
    "main": "dist/server.js",
    "license": "MIT",
    "scripts": {
        "build": "tsc && yarn typeorm migration:run",
        "start": "ts-node src/shared/infra/http/server.ts",
        "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "dev:db": "docker start gostack_postgres || docker run --name gostack_postgres -e POSTGRES_PASSWORD=docker -e POSTGRES_DB=gostack_gobarber -p 5432:5432 -d postgres"
    },
    "dependencies": {
        "@types/node": "^14.6.1",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "date-fns": "^2.15.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "handlebars": "^4.7.6",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.2",
        "nodemailer": "^6.4.16",
        "pg": "^8.3.2",
        "reflect-metadata": "^0.1.13",
        "ts-node": "^9.0.0",
        "tsyringe": "^4.4.0",
        "typeorm": "^0.2.25",
        "uuidv4": "^6.2.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.7",
        "@types/jest": "^26.0.16",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/multer": "^1.4.4",
        "@types/nodemailer": "^6.4.0",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.2.1",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.3",
        "prettier": "^2.0.5",
        "ts-jest": "^26.4.4",
        "ts-node-dev": "^1.0.0-pre.56",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.9.7"
    }
}
