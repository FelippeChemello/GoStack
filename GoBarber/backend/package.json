{
    "name": "gobarber-backend",
    "version": "1.0.0",
    "main": "dist/server.js",
    "license": "MIT",
    "scripts": {
        "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
        "start": "node dist/shared/infra/http/server.js",
        "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "dev:db": "docker start gostack_postgres || docker run --name gostack_postgres -e POSTGRES_PASSWORD=docker -e POSTGRES_DB=gostack_gobarber -p 5432:5432 -d postgres",
        "dev:mongo": "docker start gostack_mongodb || docker run --name gostack_mongodb -d -p 27017:27017 -t mongo",
        "dev:redis": "docker start gostack_redis || docker run --name gostack_redis -p 6379:6379 -d -t redis:alpine",
        "dev": "yarn dev:redis && yarn dev:mongo && yarn dev:db && yarn dev:server",
        "test": "jest"
    },
    "dependencies": {
        "@types/node": "^14.6.1",
        "aws-sdk": "^2.808.0",
        "bcryptjs": "^2.4.3",
        "celebrate": "^13.0.4",
        "class-transformer": "^0.3.1",
        "cors": "^2.8.5",
        "date-fns": "^2.15.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "handlebars": "^4.7.6",
        "ioredis": "^4.19.2",
        "jsonwebtoken": "^8.5.1",
        "mime": "^2.4.6",
        "mongodb": "^3.6.3",
        "multer": "^1.4.2",
        "nodemailer": "^6.4.16",
        "pg": "^8.3.2",
        "rate-limiter-flexible": "^2.1.14",
        "redis": "^3.0.2",
        "reflect-metadata": "^0.1.13",
        "ts-node": "^9.0.0",
        "tsyringe": "^4.4.0",
        "typeorm": "^0.2.25",
        "uuidv4": "^6.2.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/node": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-decorators": "^7.12.12",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-typescript": "^7.12.7",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.7",
        "@types/ioredis": "^4.17.8",
        "@types/jest": "^26.0.16",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongodb": "^3.6.3",
        "@types/multer": "^1.4.4",
        "@types/nodemailer": "^6.4.0",
        "@types/redis": "^2.8.28",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-typescript-metadata": "^0.3.1",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.2.1",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.3",
        "prettier": "^2.0.5",
        "ts-jest": "^26.4.4",
        "ts-node-dev": "^1.0.0-pre.56",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.9.7"
    }
}
